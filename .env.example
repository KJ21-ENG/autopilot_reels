# Environment variable template (no secrets)
# Copy to .env.local for local development.

# Stripe (Epic 3+)
# Server-side secret key used for Stripe API calls
STRIPE_SECRET_KEY=
# Client-side publishable key for Checkout initialization
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
# Webhook signing secret for /api/stripe/webhook
STRIPE_WEBHOOK_SECRET=
# Default price/product identifiers for checkout
STRIPE_PRICE_ID=
STRIPE_PRODUCT_ID=
# Public base URL for redirect validation (e.g., https://yourdomain.com)
SITE_URL=

# Supabase (Epic 4+)
# Supabase project URL for client/server usage
NEXT_PUBLIC_SUPABASE_URL=
# Optional server-only aliases (if you prefer not to reuse NEXT_PUBLIC values)
SUPABASE_URL=
# Supabase anon key for client-side usage
NEXT_PUBLIC_SUPABASE_ANON_KEY=
# Optional server-only alias for anon key
SUPABASE_ANON_KEY=
# Service role key for server-side admin operations
SUPABASE_SERVICE_ROLE_KEY=
# Supabase Auth redirect URLs (configure in Supabase dashboard):
# - http://localhost:3000/auth/callback
# - https://yourdomain.com/auth/callback
SUPABASE_AUTH_EXTERNAL_GOOGLE_SECRET=

# Post-payment setup resume (Story 4.2+)
# HMAC secret for signing one-time account-setup resume links
AUTH_RESUME_SECRET=
# Optional: Resend API key for emailing resume links
RESEND_API_KEY=
# Optional: sender address used for resume emails (e.g. onboarding@yourdomain.com)
RESUME_FROM_EMAIL=
